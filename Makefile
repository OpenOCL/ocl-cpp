# SYNOPSIS:
#
#   make [all]  - makes everything.
#   make TARGET - makes the given target.
#   make clean  - removes all files generated by make.

GTEST_DIR = ../googletest/googletest
GTEST_LIB_DIR = ./lib
SRC = ./src
INCLUDE = ./include
TEST = ./test
LIB = ./lib

BIN = ./build/bin
OBJ = ./build/obj

# Set Google Test's header directory as a system directory, such that
# the compiler doesn't generate warnings in Google Test headers.
CPPFLAGS += -isystem $(GTEST_DIR)/include
CXXFLAGS += -g -Wall -Wextra -pthread -std=c++11

GTEST_LIBS = $(LIB)/libgtest.a $(LIB)/libgtest_main.a

TESTS = $(BIN)/testNlpSolver

GTEST_HEADERS = $(GTEST_DIR)/include/gtest/*.h \
                $(GTEST_DIR)/include/gtest/internal/*.h

all : $(GTEST_LIBS) $(TESTS)
gtest: $(GTEST_LIBS)
clean:
	rm -f $(TESTS) $(OBJ)/*.o	
clean-all :
	rm -f $(GTEST_LIBS) $(TESTS) $(OBJ)/*.o

# Builds gtest.a and gtest_main.a.
GTEST_SRCS_ = $(GTEST_DIR)/src/*.cc $(GTEST_DIR)/src/*.h $(GTEST_HEADERS)
$(OBJ)/gtest-all.o : $(GTEST_SRCS_)
	$(CXX) $(CPPFLAGS) -I$(GTEST_DIR) $(CXXFLAGS) -c \
            $(GTEST_DIR)/src/gtest-all.cc -o $@
$(OBJ)/gtest_main.o : $(GTEST_SRCS_)
	$(CXX) $(CPPFLAGS) -I$(GTEST_DIR) $(CXXFLAGS) -c \
            $(GTEST_DIR)/src/gtest_main.cc -o $@
$(LIB)/libgtest.a : $(OBJ)/gtest-all.o
	$(AR) $(ARFLAGS) $@ $^
$(LIB)/libgtest_main.a : $(OBJ)/gtest-all.o $(OBJ)/gtest_main.o
	$(AR) $(ARFLAGS) $@ $^

# builds OclSolver
$(OBJ)/NlpSolver.o : $(SRC)/NlpSolver.cc $(INCLUDE)/NlpSolver.h $(GTEST_HEADERS)
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -I$(SRC) -I$(INCLUDE) -c $< -o $@

$(OBJ)/testNlpSolver.o : $(TEST)/testNlpSolver.cc $(INCLUDE)/NlpSolver.h $(GTEST_HEADERS)
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -I$(SRC) -I$(INCLUDE) -c $< -o $@

$(BIN)/testNlpSolver : $(OBJ)/NlpSolver.o $(OBJ)/testNlpSolver.o $(GTEST_LIBS)
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -L$(GTEST_LIB_DIR) -lgtest_main -lpthread $^ -o $@



